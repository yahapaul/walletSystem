  div(class="modal-dialog")
    div(class="modal-content")
     
      div(class="modal-body")
        form#signInForm(action="" method="POST")
        .form-group
          label ID
          input.form-control#name(type="text"
            name="name" v-model="name" required)
        .form-group
          label PIN:
          input.form-control#password(type="password"
            name="password" v-model="password" required)
        .form-group
          a.button.btn.signIn(type="submit"
          v-on:click="LogIn" href='/home') Log In
