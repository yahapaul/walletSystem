doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title= title
    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

    
    link(rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css")

    link(rel="stylesheet" href="/styles/login.css")
body
  div(class="modal-dialog")
    div(class="modal-content")
      div(class="modal-header")
        h4(class="modal-title") Open Account
      
      div(class="modal-body")
        form(action="/" method="POST")
        .form-group
          label Full Name:
          input.form-control#fullName(type="text"
            name="fullname" v-model="fullName")
        .form-group
          label Address:
          input.form-control#address(type="text"
            name="address" v-model="address")
        .form-group
          //- button.btn.btn-primary(type="submit"
          //-   v-on:click="LogIn" href='/home.pug') Log In
          //-a.back(class='button' href='/login') Back
          //-a.create(class='button' href='/openAccount') Create
          a.button.btn#back(type="button"
            v-on:click="back" href='/') Back
          a.button.btn#createAccount(type="button"
            v-on:click="createAccount" href='/') Create
          
  script(src="/vue.js")
  script(src="https://unpkg.com/axios/dist/axios.min.js")
  script(src="/accntScript.js")
